{% extends 'base.html.twig' %}

{% block title %}Campus{% endblock %}

{% block content %}
    <!-- Begin Page Content -->
    <div class="container-fluid">

        <!-- Page Heading -->
        <h1 class="h3 mb-4 text-gray-800 text-center mt-4">Gestion des campus</h1>

        <!-- Begin Page Content -->
        <div class="container-fluid">

            <!-- DataTales Example -->
            <div class="card shadow mb-4">

                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                            <tr>
                                <th>Campus</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{ form_start(form) }}
                            <tr>
                                <td>{{ form_widget(form.name) }}</td>
                                <td>
                                    <button class="btn btn-primary btn-icon-split" type="submit">
                                        <span class="icon text-white-50">
                                                  <i class="fas fa-save"></i>
                                                </span>
                                        <span class="text">Enregistrer</span>
                                    </button>
                                </td>
                            </tr>
                            {{ form_end(form) }}
                            {% for campus in campusList %}
                                <tr>
                                    <td>{{ campus.name }}</td>
                                    <td>
                                        <a href="{{ path('campus_list', {'id': campus.id}) }}" class="btn btn-warning btn-icon-split">
                                                <span class="icon text-white-50">
                                                  <i class="fas fa-edit"></i>
                                                </span>
                                            <span class="text">Modifier</span>
                                        </a>
                                        <a href="{{ path('campus_delete', {'id': campus.id}) }}" class="btn btn-danger btn-icon-split">
                                                <span class="icon text-white-50">
                                                  <i class="fas fa-trash-alt"></i>
                                                </span>
                                            <span class="text">Supprimer</span>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- /.container-fluid -->
{% endblock %}

{% block scripts %}
    <script>

    </script>
{% endblock %}