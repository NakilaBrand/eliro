{% extends 'base.html.twig' %}

{% block title %}Camouses{% endblock %}

{% block content %}
    <!-- Begin Page Content -->
    <div class="container-fluid">

        <!-- Page Heading -->
        <h1 class="h3 mb-4 text-gray-800 text-center">Manage campuses</h1>

        <!-- Begin Page Content -->
        <div class="container-fluid">

            <!-- DataTales Example -->
            <div class="card shadow mb-4">

                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                            <tr>
                                <th>Campus</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{ form_start(form) }}
                            <tr>
                                <td>{{ form_widget(form.name) }}</td>
                                <td>{{ form_widget(form.save, {'attr': {'id': 'save_btn'}}) }}</td>
                            </tr>
                            {{ form_end(form) }}
                            {% for campus in campuses %}
                                <tr>
                                    <td>{{ campus.name }}</td>
                                    <td>
                                        <a class="btn btn-warning" href="{{ path('modifycampus', {'id': campus.id}) }}">Modify</a>
                                        <a class="btn btn-danger" href="{{ path('deletecampus', {'id': campus.id}) }}">Delete</a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- /.container-fluid -->
{% endblock %}

{% block scripts %}
    <script>

    </script>
{% endblock %}