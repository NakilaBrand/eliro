{% extends 'base.html.twig' %}

{% block title %}Cities{% endblock %}

{% block content %}
    <!-- Begin Page Content -->
    <div class="container-fluid">

        <!-- Page Heading -->
        <h1 class="h3 mb-4 text-gray-800 text-center mt-4">Gestion des villes</h1>

        <!-- Begin Page Content -->
        <div class="container-fluid">

            <!-- DataTales Example -->
            <div class="card shadow mb-4">

                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Ville</th>
                                    <th>Code postal</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{ form_start(form) }}
                                    <tr>
                                        <td>{{ form_widget(form.name) }}</td>
                                        <td>{{ form_widget(form.postcode) }}</td>
                                        <td>{{ form_widget(form.save) }}</td>
                                    </tr>
                                {{ form_end(form) }}
                                {% for city in cities %}
                                    <tr>
                                        <td>{{ city.name }}</td>
                                        <td>{{ city.postcode }}</td>
                                        <td>
                                            <a class="btn btn-warning" href="{{ path('modifycity', {'id': city.id}) }}">Modify</a>
                                            <a class="btn btn-danger" href="{{ path('deletecity', {'id': city.id}) }}">Delete</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- /.container-fluid -->
{% endblock %}
